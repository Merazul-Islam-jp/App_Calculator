<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text=" "
        android:textSize="40dp"
        android:gravity="bottom|right"
        android:textStyle="normal"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Clear"
            android:onClick="clear"
            android:background="#17202A"
            android:textColor="@color/white"
            android:padding="2dp"
            android:textAllCaps="false"
            android:layout_weight="3"
            android:textSize="30dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="â†"
            android:onClick="back"
            android:padding="2dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textSize="30dp"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="7"
            android:padding="2dp"
            android:onClick="numSeven"
            android:background="#17202A"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:textSize="30dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="8"
            android:padding="2dp"
            android:onClick="numEight"
            android:background="#17202A"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textSize="30dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="9"
            android:padding="2dp"
            android:onClick="numNine"
            android:background="#17202A"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:textSize="30dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="+"
            android:padding="2dp"
            android:onClick="pluse"
            android:background="@color/black"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textSize="30dp"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="4"
            android:onClick="numFour"
            android:background="#17202A"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:textSize="30dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="5"
            android:onClick="numFive"
            android:background="#17202A"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textSize="30dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="6"
            android:onClick="numSix"
            android:background="#17202A"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:textSize="30dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="-"
            android:onClick="minus"
            android:background="@color/black"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textSize="30dp"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1"
            android:onClick="numOne"
            android:background="#17202A"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:textSize="30dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2"
            android:onClick="numTwo"
            android:background="#17202A"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textSize="30dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="3"
            android:onClick="numThree"
            android:background="#17202A"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:textSize="30dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="x"
            android:onClick="intu"
            android:background="@color/black"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textSize="30dp"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:onClick="numZero"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:background="#17202A"
            android:textColor="@color/white"
            android:textSize="30dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="="
            android:onClick="equle"
            android:layout_weight="2"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="30dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="/"
            android:onClick="division"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="30dp"/>

    </LinearLayout>












</LinearLayout>